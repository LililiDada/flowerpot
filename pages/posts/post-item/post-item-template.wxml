<template name="postItem">
  <view class='post-container'>
    <view class='post-author-date'>
      <image src='{{avatar}}' class='post-author'></image>
      <text class='post-date'>{{date}}</text>
    </view>
    <text class='post-title'>{{title}}</text>
    <image src="{{imgSrc}}" class='post-image'></image>
    <text class='post-content'>
       {{content}}
    </text>
    <view class='post-like'>
      <image src='https://cloud-minapp-29237.cloud.ifanrusercontent.com/1hzb6tbae1AYh9uW.png' class='post-like-image'></image>
      <text class='post-like-font'>{{collection}}</text>
      <image src='https://cloud-minapp-29237.cloud.ifanrusercontent.com/1hzb6tStNatiyiKF.png' class='post-like-image'></image>
      <text class='post-like-font'>{{reading}}</text>
    </view>
  </view>
</template>