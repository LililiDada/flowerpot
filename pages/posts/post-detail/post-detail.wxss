/* pages/posts/post-detail/post-detail.wxss */

/* 一旦设定弹性盒子模型，其子元素也为弹性盒子模型 */

page{
  padding-bottom: 100rpx;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.hide {
  opacity: 0;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin: 20rpx auto;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  margin-bottom: 30rpx;
}

.comment_bot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background: #fff;
  height: 110rpx;
  justify-content: space-around;
  align-items: center;
}
.comment_input{
  width: 70%;
  height:80rpx;
  /* border: 2rpx solid #ccc */
  border-radius:50rpx;
  background: #f1f5fc;
  color: #666; 
  padding: 0 20rpx;
}
.comment_btn{
  width: 20%;
  height: 75rpx;
  line-height: 75rpx;
  background: #6eb542;
  color: #fff;
  margin: 0;
}
.comment {
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}
.reply{
  background: #f7f7f7;
  margin-left: 70rpx;
  margin-right: 30rpx;
  padding:  20rpx 0rpx 20rpx 20rpx;
  display: flex;
  border-bottom: 2rpx solid #eeeeee;
}
.replyUser {
  /* padding-top: 10rpx; */
  margin-left: 35rpx;
  position: relative;
  /* margin-bottom: 20rpx; */
