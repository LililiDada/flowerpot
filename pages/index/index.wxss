.weather {
  background: #30bf6f;
  height: 150rpx;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx;
 
}

.weather image {
  width: 130rpx;
}

.temp_data {
  margin-left: 15rpx;
  font-size: 60rpx;
}

.status {
  padding-top: 55rpx;
  width: 100%;
  /* height: 300rpx; */
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  background: #fff;
  position: relative;
  top: -30rpx; 
}

.status_icon {
  width: 100rpx;
  height: 70rpx;
  margin-right: 10rpx;
}

.status_one {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 15rpx;
}

.status_text {
  display: flex;
  position: relative;
  width: 75%;
}

.fettle {
  position: absolute;
  right: 0rpx;
  color: #30bf6f;
  width: 150rpx;
  text-align: center;
}

.yangshi {
  position: absolute;
  top: 70rpx;
  height: 4rpx;
  width: 700rpx;
  overflow: hidden;
  background: #ccc;
}

.switch_btn {
  position: absolute;
  right: 0rpx;
  padding: 5rpx;
  background: #30bf6f;
  color: white;
  width: 170rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
  font-size: 30rpx;
}

.uncheck {
  background: #bfbfbf;
}

.tip {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -60rpx;
  top: 10rpx;
  transform: all .5s linear;
}

.tip_slect{
  transform: rotate(180deg)
}
.explain {
  width: 88%;
  margin: 0 auto;
  background: #30bf6f;
  border-radius: 25rpx;
  letter-spacing: 3rpx;
  color: #fff;
  box-shadow: 6rpx 6rpx 14rpx #ccc;
}

@keyframes slidedown {
  from {
    height: 0;
  }

  to {
    height: 310rpx;
  }
}

@keyframes slideup {
  from {
    height: 310rpx;
  }

  to {
    height: 0rpx;
  }
}
.hide {
  display: none;
}

.show {
  display: block;
}

.open {
  animation: slidedown 0.5s;
}

.close {
  animation: slideup 0.5s;
  height: 0;
  display: none;
}


.mode_box {
  padding: 20rpx 20rpx 0;
  /* color: rgba(38, 166, 91, 1); */
}

.mode_else {
  padding-bottom: 20rpx;
}

.earn {
  margin-bottom: 30rpx;
}
.xiala{
  transition: height 0.3s
}